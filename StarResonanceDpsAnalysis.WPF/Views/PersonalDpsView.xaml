<Window x:Class="StarResonanceDpsAnalysis.WPF.Views.PersonalDpsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StarResonanceDpsAnalysis.WPF.Views"
        xmlns:vms="clr-namespace:StarResonanceDpsAnalysis.WPF.ViewModels"
        xmlns:ctrl="clr-namespace:StarResonanceDpsAnalysis.WPF.Controls"
        xmlns:lex="http://wpflocalizeextension.codeplex.com"
        xmlns:loc="clr-namespace:StarResonanceDpsAnalysis.WPF.Properties"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:behaviors="clr-namespace:StarResonanceDpsAnalysis.WPF.Behaviors"
        mc:Ignorable="d"
        Title="{lex:Loc Key={x:Static loc:ResourcesKeys.Window_PersonalDps_Title}}"
        Width="560" Height="76"
        lex:LocalizeDictionary.DesignCulture="en-US"
        Style="{StaticResource TransparentWindow}"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowState="Normal"
        d:DataContext="{d:DesignInstance Type=vms:PersonalDpsDesignTimeViewModel,
                                     IsDesignTimeCreatable=True}">

    <Window.Resources>

        <Style x:Key="SAOTTBase" TargetType="TextBlock" BasedOn="{StaticResource NormalTextBlockBaseStyle}">
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#SAO Welcome TT" />
        </Style>

        <Style x:Key="CustomShadowWindowBorder" TargetType="Border" BasedOn="{StaticResource ShadowWindowBorder}">
            <Setter Property="CornerRadius" Value="33" />
            <EventSetter Event="MouseDown" Handler="ViewBorder_MouseDown"/>
        </Style>

        <Style x:Key="DragMoveBar" TargetType="Border">
            <Setter Property="Width" Value="48" />
            <Setter Property="Height" Value="4" />
            <Setter Property="Background" Value="#D6D7DB" />
            <Setter Property="CornerRadius" Value="2" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="Margin" Value="0,7,0,0" />
        </Style>

        <Style x:Key="TimerBox" TargetType="Border">
            <Setter Property="Width" Value="80" />
            <Setter Property="Background" Value="#091B28" />
            <Setter Property="Margin" Value="12,12,0,12" />
            <Setter Property="CornerRadius" Value="21" />
        </Style>

        <Style x:Key="TimerText" TargetType="TextBlock" BasedOn="{StaticResource SAOTTBase}">
            <Setter Property="Foreground" Value="#FFF" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <Style x:Key="DpsPersentText" TargetType="TextBlock" BasedOn="{StaticResource SAOTTBase}">
            <Setter Property="FontSize" Value="26" />
            <Setter Property="Margin" Value="0,0,0,2" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <Style x:Key="DamagePanel" TargetType="WrapPanel">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <Style x:Key="TotalDamageText" TargetType="TextBlock" BasedOn="{StaticResource SAOTTBase}">
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="FontSize" Value="26" />
            <Setter Property="Foreground" Value="{Binding ThemeColor, Converter={StaticResource ColorStringToBrushConverter}}" />
        </Style>

        <Style x:Key="DamageFWChar" TargetType="TextBlock" BasedOn="{StaticResource SAOTTBase}">
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <Style x:Key="TotalDamageUnitFullWidthText" TargetType="TextBlock" BasedOn="{StaticResource DamageFWChar}">
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="FontSize" Value="26" />
            <Setter Property="Foreground" Value="{Binding ThemeColor, Converter={StaticResource ColorStringToBrushConverter}}" />
            <Setter Property="Margin" Value="0,0,0,1" />
        </Style>

        <Style x:Key="DpsUnitFullWidthText" TargetType="TextBlock" BasedOn="{StaticResource DamageFWChar}">
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Foreground" Value="#D0D5D8" />
        </Style>

        <Style x:Key="DpsWrapPanel" TargetType="WrapPanel">
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="Margin" Value="2,0,0,2" />
        </Style>

        <Style x:Key="DpsText" TargetType="TextBlock" BasedOn="{StaticResource SAOTTBase}">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="Foreground" Value="#D0D5D8" />
        </Style>

        <Style x:Key="SpliterBorder" TargetType="Border">
            <Setter Property="Height" Value="42" />
            <Setter Property="Background" Value="#F3F3F3" />
        </Style>

        <Style x:Key="IconButton" TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#IconFont" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="Foreground" Value="#D0D5D8" />
            <Setter Property="Width" Value="36" />
            <Setter Property="Height" Value="36" />
            <Setter Property="Margin" Value="2,0" />
        </Style>

        <Style x:Key="TraningSwitch" TargetType="ctrl:SwitchControl" BasedOn="{StaticResource {x:Type ctrl:SwitchControl}}">
            <Setter Property="Height" Value="24" />
            <Setter Property="FontSize" Value="28" />
            <Setter Property="Margin" Value="10,0,24,0" />
            <Setter Property="Padding" Value="3" />
        </Style>

        <Style x:Key="PersentProgressBar" TargetType="ctrl:CustomProgressBar" BasedOn="{StaticResource {x:Type ctrl:CustomProgressBar}}">
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="Height" Value="4" />
            <Setter Property="CornerRadius" Value="2" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Margin" Value="28,0,28,4" />
            <Setter Property="Background" Value="#F3F3F3" />
            <Setter Property="Foreground" Value="{Binding ThemeColor, Converter={StaticResource ColorStringToBrushConverter}}" />
        </Style>
        
    </Window.Resources>
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding LoadedCommand}" />
        </b:EventTrigger>
        <b:EventTrigger EventName="Unloaded">
            <b:InvokeCommandAction Command="{Binding UnLoadedCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Border Background="#FBFBFB" Style="{StaticResource CustomShadowWindowBorder}">
        <Grid>

            <Border Style="{StaticResource DragMoveBar}"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" MinWidth="190" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Border Style="{StaticResource TimerBox}" Grid.Column="0">
                        <TextBlock
                                Style="{StaticResource TimerText}"
                                Text="{Binding RemainingTimeDisplay}" />
                    </Border>

                    <TextBlock 
                        Style="{StaticResource DpsPersentText}"
                        Text="{Binding TeamDamagePercent, StringFormat={}{0:P1}}"
                        Grid.Column="1" />

                </Grid>

                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="165"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border 
                        Style="{StaticResource SpliterBorder}"
                        Grid.Column="0" />

                    <WrapPanel 
                        Style="{StaticResource DamagePanel}"
                        Grid.Column="2">
                        <WrapPanel>
                            <TextBlock Style="{StaticResource TotalDamageText}">
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource NumberClipValueConverter}">
                                        <Binding Path="TotalDamage" />
                                        <Binding Path="AppConfig.DamageDisplayType" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Style="{StaticResource TotalDamageUnitFullWidthText}">
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource NumberClipUnitConverter}">
                                        <Binding Path="TotalDamage" />
                                        <Binding Path="AppConfig.DamageDisplayType" />
                                    </MultiBinding>
                                </TextBlock.Text>
                                <TextBlock.Visibility>
                                    <MultiBinding Converter="{StaticResource NumberClipUnitVisibilityConverter}" ConverterParameter="Full">
                                        <Binding Path="TotalDamage" />
                                        <Binding Path="AppConfig.DamageDisplayType" />
                                    </MultiBinding>
                                </TextBlock.Visibility>
                            </TextBlock>
                            <TextBlock Style="{StaticResource TotalDamageText}" VerticalAlignment="Center">
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource NumberClipUnitConverter}">
                                        <Binding Path="TotalDamage" />
                                        <Binding Path="AppConfig.DamageDisplayType" />
                                    </MultiBinding>
                                </TextBlock.Text>
                                <TextBlock.Visibility>
                                    <MultiBinding Converter="{StaticResource NumberClipUnitVisibilityConverter}" ConverterParameter="Ascii">
                                        <Binding Path="TotalDamage" />
                                        <Binding Path="AppConfig.DamageDisplayType" />
                                    </MultiBinding>
                                </TextBlock.Visibility>
                            </TextBlock>
                        </WrapPanel>

                        <WrapPanel Style="{StaticResource DpsWrapPanel}">
                            <TextBlock
                                Style="{StaticResource DpsText}"
                                Text="(" />
                            <TextBlock Style="{StaticResource DpsText}">
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource NumberClipValueConverter}">
                                        <Binding Path="Dps" />
                                        <Binding Path="AppConfig.DamageDisplayType" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                            <TextBlock Style="{StaticResource DpsUnitFullWidthText}">
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource NumberClipUnitConverter}">
                                        <Binding Path="Dps" />
                                        <Binding Path="AppConfig.DamageDisplayType" />
                                    </MultiBinding>
                                </TextBlock.Text>
                                <TextBlock.Visibility>
                                    <MultiBinding Converter="{StaticResource NumberClipUnitVisibilityConverter}" ConverterParameter="Full">
                                        <Binding Path="Dps" />
                                        <Binding Path="AppConfig.DamageDisplayType" />
                                    </MultiBinding>
                                </TextBlock.Visibility>
                            </TextBlock>
                            <TextBlock Style="{StaticResource DpsText}">
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource NumberClipUnitConverter}">
                                        <Binding Path="Dps" />
                                        <Binding Path="AppConfig.DamageDisplayType" />
                                    </MultiBinding>
                                </TextBlock.Text>
                                <TextBlock.Visibility>
                                    <MultiBinding Converter="{StaticResource NumberClipUnitVisibilityConverter}" ConverterParameter="Ascii">
                                        <Binding Path="Dps" />
                                        <Binding Path="AppConfig.DamageDisplayType" />
                                    </MultiBinding>
                                </TextBlock.Visibility>
                            </TextBlock>
                            <TextBlock
                                Style="{StaticResource DpsText}"
                                Text=")" />
                        </WrapPanel>
                    </WrapPanel>

                    <Grid Grid.Column="4">
                        <Button
                            Style="{StaticResource IconButton}"
                            Content="&#xec4c;"
                            Command="{Binding OpenSkillLogCommand}"
                            Visibility="{Binding EnableTrainingMode, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        <Button
                            Style="{StaticResource IconButton}"
                            Content="&#xe612;"
                            Command="{Binding ShowStatisticsAndHidePersonalCommand}"
                            Visibility="{Binding EnableTrainingMode, Converter={StaticResource BoolToInvertedVisibilityConverter}}"/>
                    </Grid>

                    <Button
                        Style="{StaticResource IconButton}"
                        Content="&#xeb95;"
                        Command="{Binding OpenSkillBreakdownViewCommand}"
                        Grid.Column="5"/>

                    <Button
                        Style="{StaticResource IconButton}"
                        Content="&#xe6ad;"
                        Grid.Column="6">
                        <b:Interaction.Behaviors>
                            <behaviors:OpenContextMenuBehavior />
                        </b:Interaction.Behaviors>
                        <Button.ContextMenu>
                            <ContextMenu Style="{StaticResource ModernContextMenu}">
                                <ContextMenu.Resources>
                                    <Style BasedOn="{StaticResource ModernMenuItem}" TargetType="MenuItem" />
                                    <Style x:Key="{x:Static MenuItem.SeparatorStyleKey}" BasedOn="{StaticResource ModernMenuSeparator}" TargetType="Separator" />
                                </ContextMenu.Resources>
                                <MenuItem
                                    Header="打桩模式"
                                    IsCheckable="True"
                                    IsChecked="{Binding EnableTrainingMode}" />

                                <!-- 木桩选择菜单 -->
                                <MenuItem Header="木桩选择">
                                    <MenuItem
                                        Header="中间木桩"
                                        IsCheckable="True"
                                        IsChecked="{Binding SelectedDummyTarget, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Center}"
                                        StaysOpenOnClick="True" />
                                    <MenuItem
                                        Header="T木桩"
                                        IsCheckable="True"
                                        IsChecked="{Binding SelectedDummyTarget, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=TDummy}"
                                        StaysOpenOnClick="True" />
                                </MenuItem>

                                <MenuItem
                                    Command="{Binding ClearCommand}"
                                    Header="清空" />
                                <Separator />
                                <MenuItem
                                    Command="{Binding CloseWindowCommand}"
                                    Header="关闭" />
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </Grid>

                <ctrl:SwitchControl
                    Style="{StaticResource TraningSwitch}"
                    IsChecked="{Binding StartTraining, Mode=TwoWay}"
                    OffContent=" " OnContent=" " 
                    Grid.Column="2"/>

            </Grid>

            <ctrl:CustomProgressBar
                Style="{StaticResource PersentProgressBar}"
                Maximum="1"
                Value="{Binding TeamDamagePercent}" Margin="28,60,28,0" VerticalAlignment="Top" />

        </Grid>
    </Border>

</Window>
