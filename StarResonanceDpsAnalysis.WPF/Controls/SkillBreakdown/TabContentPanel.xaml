<UserControl
    x:Class="StarResonanceDpsAnalysis.WPF.Controls.SkillBreakdown.TabContentPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:StarResonanceDpsAnalysis.WPF.Controls.SkillBreakdown"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Stats Summary (Top)  -->
        <Border Grid.Row="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Offset="0" Color="#FFFFFF" />
                    <GradientStop Offset="1" Color="#F5F7FA" />
                </LinearGradientBrush>
            </Border.Background>
            <local:SkillStatsSummaryPanel
                Margin="16,16,16,16"
                DataContext="{Binding StatsViewModel}" />
        </Border>

        <!-- Separator -->
        <Border Grid.Row="1" Height="1" Background="#E8E8E8" />

        <!--  Content (Bottom)  -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" MinWidth="300" />
                <ColumnDefinition Width="3" />
                <ColumnDefinition Width="7*" MinWidth="600" />
            </Grid.ColumnDefinitions>

            <GridSplitter
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                Background="#E8E8E8" />

            <!--  Left: Chart Area  -->
            <ScrollViewer
                Grid.Column="0"
                Padding="16,16,8,16"
                VerticalScrollBarVisibility="Auto">
                <local:ChartPanel DataContext="{Binding ChartViewModel}" />
            </ScrollViewer>

            <!--  Right: Skills List  -->
            <local:SkillListPanel
                Grid.Column="2"
                Margin="0"
                DataContext="{Binding SkillListViewModel}"
                ItemTemplate="{Binding ItemTemplate, RelativeSource={RelativeSource AncestorType=local:TabContentPanel}}" />
        </Grid>
    </Grid>
</UserControl>
