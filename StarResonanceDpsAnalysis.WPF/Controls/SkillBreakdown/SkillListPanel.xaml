<UserControl
    x:Class="StarResonanceDpsAnalysis.WPF.Controls.SkillBreakdown.SkillListPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lex="http://wpflocalizeextension.codeplex.com"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:StarResonanceDpsAnalysis.WPF.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Grid.IsSharedSizeScope="True"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="SectionHeaderBorder" TargetType="Border">
            <Setter Property="Padding" Value="20,16" />
            <Setter Property="CornerRadius" Value="0" />
            <Setter Property="BorderBrush" Value="#F0F0F0" />
            <Setter Property="BorderThickness" Value="1,1,1,0" />
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Offset="0" Color="#FFFFFF" />
                        <GradientStop Offset="1" Color="#F9FAFB" />
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="#262626" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#HarmonyOS Sans SC" />
        </Style>

        <Style x:Key="HeaderColumnText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="11" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Foreground" Value="#B0B0B0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="FontFamily" Value="pack://application:,,,/Assets/Fonts/#HarmonyOS Sans SC" />
        </Style>

        <Style x:Key="SortRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#8C8C8C" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Margin" Value="8,0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#1890FF" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Foreground" Value="#1890FF" />
                                <Setter Property="FontWeight" Value="Bold" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SkillListBorder" TargetType="Border">
            <Setter Property="Background" Value="White" />
            <Setter Property="CornerRadius" Value="0" />
            <Setter Property="BorderBrush" Value="#F0F0F0" />
            <Setter Property="BorderThickness" Value="1,0,1,1" />
            <Setter Property="Padding" Value="0,0,0,8" />
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  Section Header  -->
        <Border Grid.Row="0" Style="{StaticResource SectionHeaderBorder}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!--  Title with Icon  -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Path
                        Width="16"
                        Height="16"
                        Margin="0,0,8,0"
                        Data="M3 4h18v2H3zm0 7h18v2H3zm0 7h18v2H3z"
                        Stretch="Uniform">
                        <Path.Fill>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Offset="0" Color="#1890FF" />
                                <GradientStop Offset="1" Color="#69C0FF" />
                            </LinearGradientBrush>
                        </Path.Fill>
                    </Path>
                    <TextBlock Style="{StaticResource SectionTitle}" Text="{Binding SectionTitle}" />
                </StackPanel>

                <!--  Sort Options  -->
                <Border
                    Grid.Column="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    BorderBrush="#E8E8E8"
                    BorderThickness="1"
                    CornerRadius="14"
                    Padding="12,4">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock
                            Margin="0,0,4,0"
                            VerticalAlignment="Center"
                            FontSize="13"
                            Foreground="#8C8C8C"
                            Text="{lex:Loc Key=ModuleSolve_Sort_Label}" />

                        <RadioButton
                            Content="{lex:Loc Key=SkillBreakdown_Label_Total}"
                            GroupName="SortGroup"
                            IsChecked="True"
                            Style="{StaticResource SortRadioButtonStyle}" />

                        <Border
                            Width="1"
                            Height="12"
                            Margin="0,0"
                            VerticalAlignment="Center"
                            Background="#E8E8E8" />

                        <RadioButton
                            Content="{lex:Loc Key=SkillBreakdown_Label_AverageDps}"
                            GroupName="SortGroup"
                            Style="{StaticResource SortRadioButtonStyle}" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!--  Column Headers  -->
        <Border
            Grid.Row="1"
            Padding="16,8,32,8"
            Background="#F9FAFB"
            BorderBrush="#E8E8E8"
            BorderThickness="0,1,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*" MinWidth="180" SharedSizeGroup="ColSkill" />
                    <ColumnDefinition Width="1.2*" MinWidth="100" SharedSizeGroup="ColTotal" />
                    <ColumnDefinition Width="1*" MinWidth="80" SharedSizeGroup="ColHits" />
                    <ColumnDefinition Width="1*" MinWidth="80" SharedSizeGroup="ColCrit" />
                    <ColumnDefinition Width="1*" MinWidth="80" SharedSizeGroup="ColAvg" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Style="{StaticResource HeaderColumnText}"
                    Text="SKILL (NAME)" />
                <TextBlock
                    Grid.Column="1"
                    Margin="0,0,120,0"
                    Style="{StaticResource HeaderColumnText}"
                    Text="{lex:Loc Key=SkillBreakdown_Label_Total}" />
                <TextBlock
                    Grid.Column="2"
                    Margin="0,0,120,0"
                    Style="{StaticResource HeaderColumnText}"
                    Text="{lex:Loc Key=SkillBreakdown_Label_HitCount}" />
                <TextBlock
                    Grid.Column="3"
                    Margin="0,0,120,0"
                    Style="{StaticResource HeaderColumnText}"
                    Text="{lex:Loc Key=SkillBreakdown_Label_CritRate}" />
                <TextBlock
                    Grid.Column="4"
                    Margin="0,0,120,0"
                    Style="{StaticResource HeaderColumnText}"
                    Text="{lex:Loc Key=SkillBreakdown_Label_AverageDamage}" />
            </Grid>
        </Border>

        <!--  Skills List  -->
        <Border Grid.Row="2" Style="{StaticResource SkillListBorder}">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="16,0,16,0">
                <ItemsControl
                    x:Name="SkillItemsControl"
                    ItemsSource="{Binding SkillItems}"
                    Tag="{Binding IconColor}" />
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>
