<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrl="clr-namespace:StarResonanceDpsAnalysis.WPF.Controls">

    <Style TargetType="{x:Type ctrl:SimpleColorPicker}">
        <Setter Property="Width" Value="280" />
        <Setter Property="Height" Value="Auto" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ctrl:SimpleColorPicker}">
                    <Border Background="White" BorderBrush="#DDD" BorderThickness="1" 
                            CornerRadius="8" Padding="15">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="200"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="25"/>
                            </Grid.ColumnDefinitions>

                            <!-- SV Canvas (Fixed gradient direction) -->
                            <Border Grid.Row="0" Grid.Column="0" 
                                    BorderBrush="#999" BorderThickness="1" CornerRadius="4"
                                    ClipToBounds="True">
                                <Grid>
                                    <!-- Base color background -->
                                    <Rectangle x:Name="PART_SV_Canvas" Fill="Red"/>
                                    
                                    <!-- Saturation gradient (white to transparent, left to right) -->
                                    <Rectangle>
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                                <GradientStop Color="White" Offset="0"/>
                                                <GradientStop Color="Transparent" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>
                                    
                                    <!-- Value gradient (transparent to black, top to bottom) -->
                                    <Rectangle>
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="Transparent" Offset="0"/>
                                                <GradientStop Color="Black" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>

                                    <!-- Selection indicator -->
                                    <Canvas>
                                        <Ellipse x:Name="PART_SV_Thumb" 
                                                 Width="14" Height="14"
                                                 Stroke="White" StrokeThickness="2"
                                                 Fill="Transparent"
                                                 IsHitTestVisible="False">
                                            <Ellipse.Effect>
                                                <DropShadowEffect BlurRadius="4" ShadowDepth="1" Opacity="0.5"/>
                                            </Ellipse.Effect>
                                        </Ellipse>
                                    </Canvas>
                                </Grid>
                            </Border>

                            <!-- Hue Bar -->
                            <Border Grid.Row="0" Grid.Column="2" 
                                    BorderBrush="#999" BorderThickness="1" CornerRadius="4"
                                    ClipToBounds="True">
                                <Canvas>
                                    <Rectangle x:Name="PART_Hue_Bar" 
                                               Width="25" Height="200">
                                        <Rectangle.Fill>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                <GradientStop Color="#FF0000" Offset="0.0"/>
                                                <GradientStop Color="#FFFF00" Offset="0.17"/>
                                                <GradientStop Color="#00FF00" Offset="0.33"/>
                                                <GradientStop Color="#00FFFF" Offset="0.5"/>
                                                <GradientStop Color="#0000FF" Offset="0.67"/>
                                                <GradientStop Color="#FF00FF" Offset="0.83"/>
                                                <GradientStop Color="#FF0000" Offset="1.0"/>
                                            </LinearGradientBrush>
                                        </Rectangle.Fill>
                                    </Rectangle>

                                    <Border x:Name="PART_Hue_Thumb"
                                            Width="29" Height="6"
                                            Canvas.Left="-2"
                                            BorderBrush="White" BorderThickness="2"
                                            Background="Transparent"
                                            CornerRadius="1"
                                            IsHitTestVisible="False">
                                        <Border.Effect>
                                            <DropShadowEffect BlurRadius="3" ShadowDepth="1" Opacity="0.5"/>
                                        </Border.Effect>
                                    </Border>
                                </Canvas>
                            </Border>

                            <!-- Color Preview -->
                            <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Height="40" 
                                        BorderBrush="#999" BorderThickness="1" CornerRadius="4"
                                        Background="{Binding SelectedColor, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource ColorToBrushConverter}}"/>

                                <Border Grid.Column="2" Height="40"
                                        BorderBrush="#DDD" BorderThickness="1" CornerRadius="4"
                                        Background="#F5F5F5">
                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                                               FontWeight="Bold" FontSize="14" Foreground="#333">
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}#{0:X2}{1:X2}{2:X2}">
                                                <Binding Path="SelectedColor.R" RelativeSource="{RelativeSource TemplatedParent}"/>
                                                <Binding Path="SelectedColor.G" RelativeSource="{RelativeSource TemplatedParent}"/>
                                                <Binding Path="SelectedColor.B" RelativeSource="{RelativeSource TemplatedParent}"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </Border>
                            </Grid>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
