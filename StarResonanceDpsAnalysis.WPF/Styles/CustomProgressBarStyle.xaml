<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:StarResonanceDpsAnalysis.WPF.Controls">

    <Style TargetType="{x:Type controls:CustomProgressBar}">
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Background" Value="#EEF2F7" />
        <Setter Property="Foreground" Value="{StaticResource AntPrimaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource AntBorderBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="4" />
        <Setter Property="ProgressCornerRadius" Value="4" />
        <Setter Property="BarPadding" Value="0" />
        <Setter Property="ProgressBorderBrush" Value="Transparent" />
        <Setter Property="ProgressBorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:CustomProgressBar}">
                    <Border
                        x:Name="PART_Track"
                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}">

                        <Border
                            x:Name="PART_Indicator"
                            HorizontalAlignment="Left"
                            Background="{TemplateBinding Foreground}"
                            BorderBrush="{TemplateBinding ProgressBorderBrush}"
                            BorderThickness="{TemplateBinding ProgressBorderThickness}"
                            CornerRadius="{TemplateBinding ProgressCornerRadius}">
                            
                            <Border.Width>
                                <MultiBinding Converter="{StaticResource RateToWidthConverter}">
                                    <Binding Path="ProgressRate" RelativeSource="{RelativeSource TemplatedParent}" />
                                    <Binding ElementName="PART_Track" Path="ActualWidth" />
                                </MultiBinding>
                            </Border.Width>
                            
                        </Border>

                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="PART_Track" Property="Opacity" Value="0.6" />
                            <Setter TargetName="PART_Indicator" Property="Opacity" Value="0.6" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
